{
  "schemaVersion": 1,
  "id": "armorchroma",
  "version": "${version}",

  "name": "Armor Chroma",
  "description": "Adds colors, including leather dye, and enchanted sheen to the in-game armor bar.",
  "authors": ["jobicade", "Neecko5b84 (fork)"],
  "contributors": ["Andrew Grant", "pkb"],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/armor-chroma-for-fabric",
    "issues": "https://github.com/A5b84/armor-chroma-fabric/issues",
    "sources": "https://github.com/A5b84/armor-chroma-fabric"
  },

  "license": "GPL-3.0-only",
  "icon": "assets/armorchroma/logo.png",

  "environment": "client",
  "entrypoints": {
    "client": ["nukeduck.armorchroma.ArmorChroma"],
    "modmenu": ["nukeduck.armorchroma.config.ModMenuIntegration"]
  },
  "mixins": ["armorchroma.mixins.json"],

  "depends": {
    "minecraft": ">=1.17-",
    "fabric": "*"
  },
  "suggests": {
    "modmenu": "*",
    "cloth-config2": "*"
  }
}
